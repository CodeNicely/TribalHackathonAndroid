                <Button
                    android:id="@+id/proceed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:background="@drawable/button_background"
                    android:fontFamily="sans-serif"
                    android:text="@string/sign_up"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large" />


                <TextView
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_very_small"
                    android:gravity="center"
                    android:text="@string/already_have_a_account"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSizeSmall" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/otp_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@color/button_login"
                android:orientation="vertical"
                android:visibility="visible">

                <android.support.v7.widget.CardView
                    android:id="@+id/otp_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#FFF07C"
                    app:contentPadding="@dimen/padding_large">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFF07C"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/margin_extra_small"
                            android:layout_marginRight="@dimen/margin_extra_small"
                            android:background="#FFF07C"
                            android:fontFamily="sans-serif"

                            android:gravity="center"
                            android:padding="@dimen/padding_medium"
                            android:text="@string/otp_text"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_medium" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1.7"
                                android:contentDescription="icon_otp"
                                android:paddingTop="@dimen/padding_large"
                                android:src="@drawable/ic_dialpad_black_24dp" />

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:paddingBottom="@dimen/padding_large"
                                android:textColorHint="@color/black"

                                >

                                <EditText
                                    android:id="@+id/otp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif"
                                    android:hint="@string/otp"
                                    android:inputType="number"
                                    android:textColor="@color/black"

                                    />

                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>

                        <Button
                            android:id="@+id/verify"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:background="@drawable/button_background"
                            android:fontFamily="sans-serif"
                            android:text="@string/verify"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_medium" />

                        <Button
                            android:id="@+id/resend_otp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:background="@drawable/button_background"
                            android:fontFamily="sans-serif"
                            android:text="@string/resend_otp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_medium" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </LinearLayout>


        <ProgressBar
            android:id="@+id/layout_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

    </RelativeLayout>
</ScrollView>